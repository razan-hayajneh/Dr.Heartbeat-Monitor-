<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6699ff"
    android:id="@+id/drawer_layout"
    tools:context=".Profile">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/toolbar_main" />

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.372"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintVertical_bias="0.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp">

                <RelativeLayout
                    android:layout_width="350dp"
                    android:layout_height="40dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ID_Device"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="3dp"
                        android:layout_marginLeft="3dp"
                        android:text="@string/id_device"
                        android:textColor="#fff"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.137"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintVertical_bias="0.117" />

                    <TextView
                        android:id="@+id/ID_Device_ed"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="103dp"
                        android:layout_marginLeft="103dp"
                        android:ems="10"
                        android:hint=""
                        android:text=""
                        android:textColor="#fff"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.913"
                        app:layout_constraintStart_toEndOf="@+id/ID_Device"
                        app:layout_constraintVertical_bias="0.101"
                        tools:ignore="LabelFor" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="350dp"
                    android:layout_height="40dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/full_name"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="3dp"
                        android:layout_marginLeft="3dp"
                        android:text="@string/full_name"
                        android:textColor="#fff"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.143"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintVertical_bias="0.099" />

                    <TextView
                        android:id="@+id/full_name_ed"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="103dp"
                        android:layout_marginLeft="103dp"
                        android:autofillHints=""
                        android:ems="10"
                        android:hint=""
                        android:text=""
                        android:textColor="#fff"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintVertical_bias="0.079"
                        tools:ignore="LabelFor" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="350dp"
                    android:layout_height="40dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/USERNAME"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="3dp"
                        android:layout_marginLeft="3dp"
                        android:text="@string/username"
                        android:textColor="#fff"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.143"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintVertical_bias="0.099" />

                    <TextView
                        android:id="@+id/username_ed"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="103dp"
                        android:layout_marginLeft="103dp"
                        android:autofillHints=""
                        android:ems="10"
                        android:text=""
                        android:hint=""
                        android:textColor="#fff"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toEndOf="@+id/USERNAME"
                        app:layout_constraintVertical_bias="0.079"
                        tools:ignore="LabelFor" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="350dp"
                    android:layout_height="40dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/healthInsurance"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="3dp"
                        android:layout_marginLeft="3dp"
                        android:text="@string/health_insurance"
                        android:textColor="#fff"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.137"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintVertical_bias="0.117" />

                    <TextView
                        android:id="@+id/healthInsurance_ed"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="103dp"
                        android:layout_marginLeft="103dp"
                        android:autofillHints=""
                        android:ems="10"
                        android:hint=""
                        android:text=""
                        android:textColor="#fff"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.913"
                        app:layout_constraintVertical_bias="0.101"
                        tools:ignore="LabelFor" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="350dp"
                    android:layout_height="40dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Birthday"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="3dp"
                        android:layout_marginLeft="3dp"
                        android:text="@string/birthday"
                        android:textColor="#fff"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.137"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintVertical_bias="0.117" />

                    <TextView
                        android:id="@+id/Birthday_ed"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="103dp"
                        android:layout_marginLeft="103dp"
                        android:autofillHints=""
                        android:text=""
                        android:textColor="#fff"
                        android:ems="10"
                        android:hint=""
                        tools:ignore="LabelFor" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="350dp"
                    android:layout_height="40dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Gender"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="3dp"
                        android:layout_marginLeft="3dp"
                        android:text="@string/gender"
                        android:textColor="#fff"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.137"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintVertical_bias="0.117" />

                    <TextView
                        android:id="@+id/Gender_ed"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="103dp"
                        android:layout_marginLeft="103dp"
                        android:text=""
                        android:autofillHints=""
                        android:textColor="#fff"
                        android:ems="10"
                        android:hint=""
                        tools:ignore="LabelFor" />
                </RelativeLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/heart_disease"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/heart_disease"
                android:textColor="#fff"
                android:textSize="20sp"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:textColorHighlight="#F13737"/>

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp">

                <TextView
                    android:id="@+id/txt"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="@string/disease_list"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/diseases"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:autofillHints=""
                    android:hint="@string/your_disease"
                    android:inputType="text"
                    android:outlineAmbientShadowColor="#fff"
                    tools:ignore="RtlHardcoded"
                    tools:targetApi="p" />

                <Button
                    android:id="@+id/add"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:background="#f00"
                    android:text="@string/add" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_gravity="start">
        <include
            layout="@layout/nav_drawer_main"/>
    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>