<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6699ff"
    android:id="@+id/drawer_layout"
    tools:context=".Profile">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/toolbar_main" />

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="5dp"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/logo1" />

                <RelativeLayout
                    android:layout_width="350dp"
                    android:layout_height="40dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/ID_Device"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="3dp"
                        android:text="@string/id_device"
                        android:textColor="#fff"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.137"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintVertical_bias="0.117" />

                    <TextView
                        android:id="@+id/ID_Device_ed"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="103dp"
                        android:ems="10"
                        android:hint=""
                        android:text=""
                        android:textColor="#fff"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.913"
                        app:layout_constraintStart_toEndOf="@+id/ID_Device"
                        app:layout_constraintVertical_bias="0.101"
                        tools:ignore="LabelFor" />

                    <EditText
                        android:id="@+id/id_dev1"
                        android:textColor="#fff"
                        android:layout_marginStart="107dp"
                        android:layout_width="200dp"
                        android:textSize="14sp"
                        android:layout_height="40dp"
                        android:background="@android:color/transparent"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="350dp"
                    android:layout_height="40dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/full_name"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="3dp"
                        android:text="@string/name"
                        android:textColor="#fff"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.143"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintVertical_bias="0.099" />

                    <TextView
                        android:id="@+id/full_name_ed"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="103dp"
                        android:autofillHints=""
                        android:ems="10"
                        android:hint=""
                        android:text=""
                        android:textColor="#fff"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintVertical_bias="0.079"
                        tools:ignore="LabelFor" />
                    <EditText
                        android:id="@+id/full_name00"
                        android:textSize="14sp"
                        android:textColor="#fff"
                        android:layout_marginStart="107dp"
                        android:layout_width="78dp"
                        android:layout_height="40dp"
                        android:background="@android:color/transparent"/>
                    <EditText
                        android:id="@+id/full_name10"
                        android:textSize="14sp"
                        android:textColor="#fff"
                        android:layout_marginStart="185dp"
                        android:layout_width="78dp"
                        android:layout_height="40dp"
                        android:background="@android:color/transparent" />
                    <EditText
                        android:id="@+id/full_name20"
                        android:textColor="#fff"
                        android:background="@android:color/transparent"
                        android:textSize="14sp"
                        android:layout_marginStart="266dp"
                        android:layout_width="78dp"
                        android:layout_height="40dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="350dp"
                    android:layout_height="40dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/USERNAME"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="3dp"
                        android:text="@string/username"
                        android:textColor="#fff"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.143"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintVertical_bias="0.099" />
                    <TextView
                        android:id="@+id/username_ed"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="103dp"
                        android:autofillHints=""
                        android:ems="10"
                        android:text=""
                        android:hint=""
                        android:textColor="#fff"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toEndOf="@+id/USERNAME"
                        app:layout_constraintVertical_bias="0.079"
                        tools:ignore="LabelFor" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/healthInsurance_ed"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:autofillHints=""
                        android:ems="10"
                        android:hint=""
                        android:text="@string/space"
                        android:textColor="#fff"
                        tools:ignore="LabelFor" />
                    <EditText
                        android:id="@+id/health_insure1"
                        android:textColor="#fff"
                        android:layout_marginStart="103dp"
                        android:layout_width="200dp"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="350dp"
                    android:layout_height="40dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Birthday"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="3dp"
                        android:text="@string/birthday"
                        android:textColor="#fff"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.137"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintVertical_bias="0.117" />

                    <TextView
                        android:id="@+id/Birthday_ed"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="103dp"
                        android:autofillHints=""
                        android:text=""
                        android:textColor="#fff"
                        android:ems="10"
                        android:hint=""
                        tools:ignore="LabelFor" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="350dp"
                    android:layout_height="40dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Gender"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="3dp"
                        android:text="@string/gender"
                        android:textColor="#fff"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.137"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintVertical_bias="0.117" />

                    <TextView
                        android:id="@+id/Gender_ed"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="103dp"
                        android:text=""
                        android:autofillHints=""
                        android:textColor="#fff"
                        android:ems="10"
                        android:hint=""
                        tools:ignore="LabelFor" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="350dp"
                    android:layout_height="40dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="3dp"
                        android:text="@string/phone_number"
                        android:textColor="#fff"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.137"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintVertical_bias="0.117" />
                    <TextView
                        android:id="@+id/Phone_ed"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="103dp"
                        android:autofillHints=""
                        android:ems="10"
                        android:hint=""
                        android:text=""
                        android:textColor="#fff"
                        tools:ignore="LabelFor" />

                    <EditText
                        android:id="@+id/Phone_ed10"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="107dp"
                        android:background="@android:color/transparent"
                        android:textColor="#fff"
                        android:textSize="14sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="350dp"
                    android:layout_height="40dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Email"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="3dp"
                        android:text="@string/e_mail"
                        android:textColor="#fff"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.137"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintVertical_bias="0.117" />
                    <TextView
                        android:id="@+id/Email_ed"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="103dp"
                        android:autofillHints=""
                        android:ems="10"
                        android:text=""
                        android:textColor="#fff"
                        tools:ignore="LabelFor" />
                    <EditText
                        android:id="@+id/Email_ed10"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:background="@android:color/transparent"
                        android:layout_marginStart="107dp"
                        android:layout_width="200dp"
                        android:layout_height="40dp" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="350dp"
                    android:layout_height="40dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="3dp"
                        android:text="@string/address"
                        android:textColor="#fff"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.137"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintVertical_bias="0.117" />
                    <TextView
                        android:id="@+id/Address"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="103dp"
                        android:autofillHints=""
                        android:ems="10"
                        android:text=""
                        android:textColor="#fff"
                        tools:ignore="LabelFor" />
                    <EditText
                        android:id="@+id/Address10"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:layout_marginStart="107dp"
                        android:background="@android:color/transparent"
                        android:layout_width="200dp"
                        android:layout_height="40dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                    android:id="@+id/Doctor_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:text="@string/space"
                    android:textColor="#fff"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.137"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintVertical_bias="0.117" />
                </RelativeLayout>
                <TextView
                    android:id="@+id/heart_disease"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/heart_disease"
                    android:textColor="#fff"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="30dp"
                    android:textColorHighlight="#F13737"/>

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="0dp">
                    <Spinner
                        android:id="@+id/diseases"
                        android:layout_width="245dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="5dp"
                        android:autofillHints=""
                        android:dropDownWidth="wrap_content"
                        android:dropDownSelector="@android:drawable/btn_dropdown"
                        android:hint="@string/your_disease"
                        android:inputType="text"
                        android:outlineAmbientShadowColor="#fff"
                        android:spinnerMode="dialog"
                        tools:ignore="RtlHardcoded" />

                    <Button
                        android:id="@+id/add_disease"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="@string/add" />
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="0dp"
                    android:padding="0dp">
                    <Spinner
                        android:id="@+id/Your_diseases"
                        android:layout_width="245dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="1dp"
                        android:autofillHints=""
                        android:dropDownWidth="wrap_content"
                        android:dropDownSelector="@android:drawable/btn_dropdown"
                        android:hint="@string/your_disease"
                        android:inputType="text"
                        android:outlineAmbientShadowColor="#fff"
                        android:spinnerMode="dialog"
                        tools:ignore="RtlHardcoded" />

                    <Button
                        android:id="@+id/remove_disease"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="@string/remove" />
                </LinearLayout>

                <Button
                    android:id="@+id/edit_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="250dp"
                    android:text="@string/edit_information" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="@string/your_disease_recorded"
                        android:textColor="#aaaaff"
                        android:textSize="20sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="100dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        />
                </LinearLayout>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_gravity="start">
        <include
            layout="@layout/nav_drawer_main"/>
    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>